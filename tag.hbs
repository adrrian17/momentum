{{!< default}}
<div class="mx-4 md:mx-auto md:max-w-xl mt-12">
    <div class="mb-12">
        <span class="font-work-sans text-lg text-slate-400">Etiqueta</span>
        {{#tag}}
            <header>
                <h1 class="font-work-sans text-3xl font-bold text-slate-800">{{name}}</h1>
                <p>
                    {{#if description}}
                        {{description}}
                    {{/if}}
                </p>
            </header>
        {{/tag}}
    </div>
    {{#foreach posts}}
        {{> "card"}}
    {{/foreach}}
</div>