{{!< default}}
{{> "intro"}}
<div class="max-w-md mx-auto px-4 md:px-0 md:mx-auto md:max-w-lg mt-12">
	<div class="flex flex-col space-y-4 md:space-y-0 md:space-x-6 md:flex-row mb-14">
		<a href="/comics"
			class="flex flex-1 group justify-center p-6 border-4 border-brand-400 rounded-xl hover:shadow-md hover:bg-brand-400">
			<div>
				<h2 class="font-work-sans text-xl font-bold text-slate-800 dark:text-gray-200 group-hover:text-white">
					Cómics 📚</h2>
			</div>
		</a>
		<a href="/guiones"
			class="flex flex-1 group justify-center p-6 border-4 border-brand-400 rounded-xl hover:shadow-md hover:bg-brand-400">
			<h2 class="font-work-sans text-xl font-bold text-slate-800 dark:text-gray-200 group-hover:text-white">
				Guiones 📝</h2>
		</a>
	</div>
	<div class="mb-8">
		<h2 class="font-work-sans text-xl font-bold text-slate-800 dark:text-gray-200">Artículos Recientes ⏰</h2>
		<div class="border-2 w-12 rounded-full border-brand-400 mt-1"></div>
	</div>
	{{#get "posts" limit="5" order="published_at desc" filter="tag:-[comic,guiones]"}}
		{{#foreach posts visibility="all"}}
			{{> "card"}}
		{{/foreach}}
	{{/get}}
	{{> subscribe-form}}
</div>