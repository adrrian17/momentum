{{!< default}}
{{#page}}
    <div class="flex flex-col max-w-md mx-auto px-4 md:px-0 md:mx-auto md:max-w-lg mt-12">
        <div class="flex flex-col items-center">
            <div class="">
                <h1 class=" font-work-sans text-3xl font-bold text-slate-800">{{title}}</h1>
            </div>
            <div class="my-6 text-lg font-work-sans">
                {{content}}
            </div>
        </div>
        <div>
            {{#get "posts" limit="all" order="published_at desc" filter="tag:comic" include="tags"}}
                {{#foreach posts}}
                    {{> "comic-card"}}
                {{/foreach}}
            {{/get}}
        </div>
    </div>
{{/page}}