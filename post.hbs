{{!< default}}
{{#post}}
  <header class="header">
    <div class="flex flex-col items-center max-w-screen-xl py-14 mx-auto">
      <h1 class="text-4xl font-bold font-work-sans mb-2 dark:text-gray-200 text-center">{{title}}</h1>
      <div class="flex justify-center">
        <span class="font-work-sans text-slate-400 text-lg">
          <time datetime="{{date format=" YYYY-MM-DD"}}">
            {{date format="D MMM YYYY"}}
          </time>
        </span>
        <span class="font-work-sans text-gray-400 text-lg mx-4">â€¢</span>
        <span class="font-work-sans text-gray-400 text-lg">
          {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}
        </span>
      </div>
      <figure class="max-w-prose rounded-lg px-8 md:px-0">
        <img class="rounded-lg mt-8" src="{{feature_image}}" />
      </figure>
    </div>
  </header>
  <article class="max-w-prose px-8 mx-auto mt-14 {{post_class}}">
    <div class="post-content">
      {{content}}
    </div>
    {{> subscribe-form}}
    <div class="flex justify-center">
      {{> share-block}}
    </div>
  </article>
  {{> related-posts}}
{{/post}}