<html lang='{{@site.locale}}'>

<head>
	<meta charset='utf-8' />
	<meta http-equiv='X-UA-Compatible' content='IE=edge' />
	<meta name='viewport' content='width=device-width, initial-scale=1' />
	<link rel='stylesheet' type='text/css' href='{{asset "built/main.css"}}' />
	<title>{{meta_title}}</title>
	<link rel='preconnect' href='https://fonts.googleapis.com' />
	<link rel='preconnect' href='https://fonts.gstatic.com' crossOrigin />
	<link
		href='https://fonts.googleapis.com/css2?family=Merriweather:wght@400;900&family=Work+Sans:wght@400;500;700&display=swap'
		rel='stylesheet' />
	<script src="https://unpkg.com/flowbite@1.3.4/dist/flowbite.js"></script>
	{{ghost_head}}
</head>

<body class='{{body_class}} bg-neutral-50'>
	<header class='flex items-center justify-center h-16 bg-slate-50'>
		{{navigation}}
	</header>
	<main>
		{{{body}}}
	</main>
	<footer class='flex flex-col items-center my-24'>
		<section class='text-slate-400 font-work-sans'>Adrian Ayala
			&copy;
			{{date format='YYYY'}}
		</section>
		<a href="/rss">
			{{> "icons/rss"}}
		</a>
	</footer>
	<script src="{{asset 'built/jquery-3.4.1.min.js'}}"></script>
	{{#is "post, page"}}
		<script src="{{asset 'built/jquery.fitvids.js'}}"></script>
		<script>
			var images = document.querySelectorAll('.kg-gallery-image img');

			images.forEach(function (image) {
				var container = image.closest('.kg-gallery-image');
				var width = image.attributes.width.value;
				var height = image.attributes.height.value;
				var ratio = width / height;
				container.style.flex = ratio + ' 1 0%';
			});

			$(document).ready(function () {
				var $postContent = $(".post-content");
				$postContent.fitVids();
			});
		</script>
	{{/is}}
	{{ghost_foot}}
</body>

</html>