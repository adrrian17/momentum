{{!< default}}
{{#page}}
    <div class="flex flex-col mx-4 md:max-w-lg md:mx-auto mt-14">
        <div class="flex flex-col items-center mb-8">
            <div>
                <h1 class="font-work-sans text-3xl font-bold text-slate-800">{{title}}</h1>
            </div>
            <p class="my-6 text-lg font-work-sans">
                {{#get "posts" filter="tags:-comic"}}
                    {{t "Todos los ({total}) posts en orden cronol√≥gico." total=pagination.total}}
                {{/get}}
            </p>
        </div>
        {{#get "posts" limit="all" order="published_at desc" filter="tags:-comic"}}
            {{#foreach posts visibility="all"}}
                {{> "card"}}
            {{/foreach}}
        {{/get}}
    </div>
{{/page}}