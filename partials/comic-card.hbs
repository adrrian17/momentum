<a href="{{url}}" style="background-image: url({{feature_image}})"
  class="flex items-end my-12 rounded-lg shadow-md min-h-[300] max-h-[300] bg-center bg-cover">
  <div class="flex flex-1 flex-row justify-between items-center bg-slate-900/70 rounded-b-lg p-3">
    <div>
      <h2 class="font-bold font-work-sans text-2xl text-slate-100 dark:text-gray-200">{{title}}</h2>
      <span class="font-work-sans text-slate-100 dark:text-gray-400">
        <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
      </span>
    </div>
    {{#tags.[1]}}
      <span class="rounded-full bg-brand-400 p-2 span-2 text-white text-sm font-work-sans">{{name}}</span>
    {{/tags.[1]}}
  </div>
</a>