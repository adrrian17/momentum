<article class="my-12 pb-12 border-b-2 border-b-slate-200">
    <div class="flex flex-row mb-6">
        <div class="flex flex-col flex-1 items-start">
            <a href="{{url}}">
                <h2 class="font-bold font-work-sans text-2xl dark:text-gray-200">{{title}}</h2>
            </a>
            <span class="font-work-sans dark:text-gray-400">
                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
            </span>
        </div>
        <div>
            <div class="rounded-full bg-brand-500 p-2 text-white text-sm font-work-sans">{{tags}}</div>
        </div>
    </div>
    <div class="comic-cover w-full">
        <a href="{{url}}">
            <img class="rounded-xl" src="{{feature_image}}" />
        </a>
    </div>
</article>