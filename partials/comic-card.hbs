<article class="my-12">
    <div class="align-middle justify-between rounded-xl shadow-md bg-slate-200">
        <div class="comic-cover w-full">
            <a href="{{url}}">
                <img class="rounded-t-xl" src="{{feature_image}}" />
            </a>
        </div>
        <div class="flex flex-col items-center p-4 space-y-4">
            <div class="rounded-full bg-brand-500 p-1.5 text-white text-sm font-work-sans">{{tags}}</div>
            <a href="{{url}}">
                <h3 class="font-bold font-work-sans text-xl">{{title}}</h3>
            </a>
            <div>
                <span class="font-work-sans">
                    <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                </span>
            </div>
        </div>
    </div>
</article>